{
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/next"
      },
      {
        "src": "server/app.js",
        "use": "vercel-node-server",
        "config": {
          "entrypoint": "app.js"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/app.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/app"
      }
    ]
  }